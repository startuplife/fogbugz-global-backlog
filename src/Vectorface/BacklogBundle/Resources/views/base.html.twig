<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>{% block title %}Backlogs{% endblock %}</title>
    {% block stylesheets %}
    <link href="{{ asset('bundles/vectorfacebacklog/css/bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/vectorfacebacklog/css/bootstrap-responsive.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/vectorfacebacklog/css/bootstrap-override.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/vectorfacebacklog/css/ui-lightness/jquery-ui-1.10.3.custom.min.css') }}" rel="stylesheet">
    <link href="{{ asset('bundles/vectorfacebacklog/css/base.css') }}" rel="stylesheet">
    {% endblock %}
</head>
<body>


    <div id="deleteModal" class="modal hide fade" tabindex="-1" role="dialog">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">Delete this entry?</h3>
        </div>
        <div class="modal-body">
            <div class="alert alert-error">Removing this entry will <b>not</b> remove it from Fogbugz. Are you sure?</div>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button class="btn btn-danger trigger-delete" data-ixBug="">Delete</button>
        </div>
    </div>

    <div id="editModal" class="modal hide fade" tabindex="-1" role="dialog">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            <h3 id="myModalLabel">Edit this Entry?</h3>
        </div>
        <div class="modal-body">
            <form class="form-horizontal" method="POST">
                <div class="control-group">
                    <label class="control-label">Time Estimate</label>
                    <div class="controls">
                        <input id="timeEstimate" name="timeEstimate" type="text" placeholder="e.g. 0" class="input-large">
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label">Assigned To</label>
                    <div class="controls">
                        <input id="personAssignedTo" name="personAssignedTo" type="text" placeholder="e.g. Cory Darby" class="input-large search-users">
                    </div>
                </div>
            </form>
        </div>
        <div class="modal-footer">
            <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
            <button class="btn btn-success trigger-edit" data-ixBug="">Edit</button>
        </div>
    </div>

    <div class="navbar navbar-static-top">
        <div class="navbar-inner">
            <div class="container">
                <ul class="nav pull-left">
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">Backlog&nbsp;<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li><a href="{{ path('vectorface_backlog_main') }}">Home</a></li>
                            <li><a href="{{ path('vectorface_backlog_product') }}">Product</a></li>
                            <li><a href="{{ path('vectorface_backlog_sprint') }}">Sprints</a></li>
                        </ul>
                    </li>
                    <li class="divider-vertical"></li>
                </ul>

                <ul class="nav pull-right">
                    <li>
                                            <form class="navbar-search">
                                                <div class="input-prepend">
                                                  <div class="btn-group">
                                                    <button class="btn" tabindex="-1">Open</button>
                                                    <button class="btn dropdown-toggle" data-toggle="dropdown" tabindex="-1">
                                                      <span class="caret"></span>
                                                  </button>
                                                  <ul class="dropdown-menu">
                                                    <li><a href="#">Open</a></li>
                                                      <li><a href="#">Closed</a></li>
                                                      <li><a href="#">All</a></li>
                                                  </ul>
                                              </div>
                                              <span role="status" aria-live="polite" class="ui-helper-hidden-accessible"></span><input type="text" class="search-tickets ui-autocomplete-input" autofocus="autofocus" placeholder="Add to backlog" autocomplete="off">
                                          </div>
                                      </form>
                                  </li>
                    <li class="divider-vertical"></li>
                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><span class="icon-wrench"></span></a>
                        <ul class="dropdown-menu">
                            <li class="dropdown-pull"><a href="{{ path('vectorface_backlog_pull') }}"><i class=" icon-arrow-left"></i>&nbsp;Pull</a></li>
                            <li class="dropdown-push"><a href="{{ path('vectorface_backlog_push') }}"><i class=" icon-arrow-right"></i>&nbsp;Push</a></li>
                            <li class="divider"></li>
                            <li><a href="https://github.com/Vectorface/fogbugz-global-backlog/issues"><i class="icon-comment"></i>&nbsp;Suggest Feature</a></li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container">
        {% block content %}{% endblock %}
    </div>

    {% block javascripts %}
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"></script>
    <script src="//ajax.googleapis.com/ajax/libs/jqueryui/1.10.3/jquery-ui.min.js"></script>
    <script src="{{ asset('bundles/vectorfacebacklog/js/bootstrap.min.js') }}" type="text/javascript" /></script>
    <script src="{{ asset('bundles/vectorfacebacklog/js/checkall.js') }}" type="text/javascript" /></script>
    <script src="{{ asset('bundles/vectorfacebacklog/js/search-tickets.js') }}" type="text/javascript" /></script>
    <script src="{{ asset('bundles/vectorfacebacklog/js/search-users.js') }}" type="text/javascript" /></script>
    <script src="{{ asset('bundles/vectorfacebacklog/js/modal.js') }}" type="text/javascript" /></script>
    <script src="{{ asset('bundles/vectorfacebacklog/js/tooltip.js') }}" type="text/javascript" /></script>
    <script src="{{ asset('bundles/vectorfacebacklog/js/sortable.js') }}" type="text/javascript" /></script>
    {% endblock %}

</body>
</html>